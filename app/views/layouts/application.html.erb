<!DOCTYPE html>
<html>
  <head>
    <title>Members Only</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light flex justify-content-between">
      <a class="navbar-brand font-weight-bolder" href="#">Members Only</a>
      <div class="d-flex flex-row align-items-center">
        <% if current_user %>
          <a class="pr-2"><%= current_user.full_name %></a>

          <%= link_to 'Log Out', destroy_user_session_path, :method => :delete %>
        <% else %>
          <%= link_to 'Log In', user_session_path %>
        <% end %>

      </div>
    </nav>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>
  </body>
</html>
